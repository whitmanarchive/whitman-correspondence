            <opener>
                <dateline>
                    <name type="place">
                        <handShift rend="printed"/> OFFICE OF THE <lb/> UNIVERSAL KNOWLEDGE AND
                        INFORMATION BUREAU, <lb/> WORLD BUILDING, <lb/> NEW YORK,</name>
                    <date when="1891-12-01">
                            <handShift rend="manuscript"/> 1 Dec <handShift rend="printed"/> 189<handShift rend="manuscript"/>1<ptr target="loc.08212_n1"/>
