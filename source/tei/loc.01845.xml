                <dateline>
                    <date when="1875-07-20"><unclear reason="deletion" cert="low" resp="#al">July</unclear> <gap reason="deletion" extent="2 numbers"/><unclear reason="deletion" cert="medium" resp="#al">/75</unclear></date>
